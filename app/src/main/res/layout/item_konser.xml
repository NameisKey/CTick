<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:elevation="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="6dp">

        <ImageView
            android:id="@+id/iv_foto"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Konser"
            android:layout_toEndOf="@+id/iv_foto"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:justificationMode="inter_word"/>

        <ImageView
            android:id="@+id/ic_lokasi"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_location_on"
            android:layout_toEndOf="@+id/iv_foto"
            android:layout_below="@+id/tv_judul"/>

        <ImageView
            android:id="@+id/ic_kalender"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_calendar_month_24"
            android:layout_toEndOf="@+id/iv_foto"
            android:layout_below="@+id/ic_lokasi"/>


        <TextView
            android:id="@+id/tv_tempat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakabaring, Palembang"
            android:layout_below="@id/tv_judul"
            android:layout_toEndOf="@id/ic_lokasi"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:justificationMode="inter_word"/>

        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="19 Januari 2024"
            android:layout_below="@id/tv_tempat"
            android:layout_toEndOf="@id/ic_kalender"
            android:layout_marginStart="5dp"
            android:textSize="18sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:justificationMode="inter_word"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>